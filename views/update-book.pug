extends layout.pug 
block header_title 
    title #{book.title} 

block content 
    h1 Update Book 
    form(action="", method="post")
        if !valid.isvalid
            h1 Oops 
            ul  
                if !valid.isauthor_valid
                    li Author is required 
                if !valid.istitle_valid
                    li Title is required 
        p
            label(for = "title") Title: 
            input(type="text", name="title", id="title", value=book.title)
        p
            label(for = "author") Author: 
            input(type="text",name="author", id="author", value=book.author)
        p
            label(for = "genre") Genre: 
            input(type="text",name="genre", id="genre", value=book.genre)
        p
            label(for = "year") Year: 
            input(type="text",name="year", id="year", value=book.year)
        input(type="submit",value='Update Book')

    form(method="post", action=`/books/${book.id}/delete`, onsubmit="return confirm('Do you really want to delete this book?');")
        p 
            a(href="/", class="button") Cancel 
        p
            input(type="submit",value="Delete Book")

